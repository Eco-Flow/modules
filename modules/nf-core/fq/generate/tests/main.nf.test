nextflow_process {

    name "Test Process FQ_GENERATE"
    script "../main.nf"
    process "FQ_GENERATE"

    test("test_fq_lint_fail") {
        config "./nextflow.config"
        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = Channel.of( [ id:'test', single_end:false ] )
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }

    }
}
