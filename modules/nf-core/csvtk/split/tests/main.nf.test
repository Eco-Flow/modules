nextflow_process {

    name "Test Process CSVTK_SPLIT"
    script "../main.nf"
    process "CSVTK_SPLIT"

    test("split - csv") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file(params.modules_testdata_base_path + '/generic/tsv/test.tsv', checkIfExists: true) ]
                ]
                input[1] = "tsv"
                input[2] = "tsv"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("split - csv - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file(params.modules_testdata_base_path + '/generic/tsv/test.tsv', checkIfExists: true) ]
                ]
                input[1] = "tsv"
                input[2] = "tsv"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
