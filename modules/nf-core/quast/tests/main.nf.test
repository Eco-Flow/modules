nextflow_process {

    name "Test Process QUAST"
    script "../main.nf"
    process "QUAST"

    tag "modules"
    tag "modules_nfcore"
    tag "quast"

    test("sarscov2 - contigs, genome") {

        when {
            process {
                """
                input[0] = [
                            [ id: 'test1' ], // meta map
                            file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fasta/contigs.fasta', checkIfExists: true)
                ]
                input[1] = [
                            [ id: 'test1' ], // meta map
                            file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta.gz', checkIfExists: true)
                ]
                input[2] = [
                            [ id: 'test1' ], // meta map
                            file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.gff3.gz', checkIfExists: true)
                ]                
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                //{ assert process.out.results[0].collect()[1].size() == 12 },
                { assert snapshot(
                    process.out.tsv,
                    //process.out.transcriptome,
                    process.out.misassemblies,
                    process.out.unaligned,
                    process.out.versions,
                    ).match() }
            )
        }
    }

    test("test on sarscov2 contigs and genome - stub") {

        options '-stub'

        when {
            process {
                """
                input[0] = [
                            [ id: 'test1' ], // meta map
                            file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fasta/contigs.fasta', checkIfExists: true)
                ]
                input[1] = [
                            [ id: 'test1' ], // meta map
                            file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta.gz', checkIfExists: true)
                ]
                input[2] = [
                            [ id: 'test1' ], // meta map
                            file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.gff3.gz', checkIfExists: true)
                ]                
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

}
