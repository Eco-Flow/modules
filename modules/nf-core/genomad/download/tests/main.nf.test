nextflow_process {

    name "Test Process GENOMAD_DOWNLOAD"
    script "../main.nf"
    process "GENOMAD_DOWNLOAD"
    config "./nextflow.config"

    test("No input") {

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("No input - stub") {

        options "-stub"

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
